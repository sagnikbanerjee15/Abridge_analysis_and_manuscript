                    cmd += f"2> {options.output_directory}/errors/compress_cram_{sra}_{layout}_{iteration}.error "
                    os.system(cmd)
                    
                if os.path.exists(f"{alignment_cramfilename}.crai") == False:
                    cmd  = f"(/usr/bin/time --verbose "
                    cmd += f" samtools index -@ 1 {alignment_cramfilename} "
                    cmd += f")"
                    cmd += f"1> {options.output_directory}/outputs/index_cram_{sra}_{layout}_{iteration}.output "
                    cmd += f"2> {options.output_directory}/errors/index_cram_{sra}_{layout}_{iteration}.error "
                    os.system(cmd)
                    
                if os.path.exists(f"{alignment_bamfilename}.bai") == False:
                    cmd  = f"(/usr/bin/time --verbose "
                    cmd += f" samtools index -@ 1 {alignment_bamfilename} "
                    cmd += f")"
                    cmd += f"1> {options.output_directory}/outputs/index_bam_{sra}_{layout}_{iteration}.output "
                    cmd += f"2> {options.output_directory}/errors/index_bam_{sra}_{layout}_{iteration}.error "
                    os.system(cmd)
                
                if os.path.exists(alignment_bamfilename) == False:
                    cmd  = f"(/usr/bin/time --verbose "
                    cmd += f" samtools view -@ 1 -bS -o {alignment_bamfilename} {alignment_samfilename} "
                    cmd += f")"
                    cmd += f"1> {options.output_directory}/outputs/compress_bam_{sra}_{layout}_{iteration}.output "
                    cmd += f"2> {options.output_directory}/errors/compress_bam_{sra}_{layout}_{iteration}.error "
                    os.system(cmd)
                
                if os.path.exists(f"{options.output_directory}/outputs/decompress_cram_{sra}_{layout}_{iteration}.output") == False:
                    cmd  = f"(/usr/bin/time --verbose "
                    cmd += f" samtools view -h -@ 1 -T {options.genome} {alignment_cramfilename} > {alignment_samfilename}.temp "
                    cmd += f")"
                    cmd += f"1> {options.output_directory}/outputs/decompress_cram_{sra}_{layout}_{iteration}.output "
                    cmd += f"2> {options.output_directory}/errors/decompress_cram_{sra}_{layout}_{iteration}.error "
                    os.system(cmd)
                    os.system(f"rm {alignment_samfilename}.temp ")   
                
    
    for iteration in range(int(options.num_times)):
        for Assay_Type in options.metadata_expanded:
            for row in options.metadata_expanded[Assay_Type]:
                sra = row[6]
                layout = row[2]
                if "SRR13711353" not in sra and "SRR12077404" not in sra:continue
                alignment_samfilename_in_temp = f"{options.temp_directory}/alignments/{sra}_{layout}.sam"
                alignment_samfilename = f"{options.output_directory}/alignments/{sra}_{layout}.sam"
                alignment_bamfilename = f"{options.output_directory}/alignments/{sra}_{layout}.bam"
                alignment_cramfilename = f"{options.output_directory}/alignments/{sra}_{layout}.cram"
                
                """
                cmd = f"cp {alignment_samfilename_in_temp} {alignment_samfilename}"
                os.system(cmd)
                logging.info(f"Running command - {cmd}")
                """
                
                ##################################################################################################
                # Compress alignments with Abridge
                ##################################################################################################
                
                os.system(f"mkdir {options.temp_directory}/abridge_compressed_files")
                
                #################################################################################################################
                # 1. compress_save_all_quality_scores_save_exact_quality_scores
                #################################################################################################################
                for level in [1,2,3]:
                    cmd  = f"(/usr/bin/time --verbose abridge "
                    cmd += f" --compress "
                    cmd += f" --keep_intermediate_error_files "
                    cmd += f" --genome {options.genome} "
                    cmd += f" --inputsamfilenames {alignment_samfilename} "
                    cmd += f" --cpu {CPU} "
                    cmd += f" --output_directory {options.output_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration} "
                    cmd += f" --save_all_quality_scores "
                    cmd += f" --save_exact_quality_scores "
                    cmd += f" --level {level}"
                    cmd += ")"
                    cmd += f" 1> {options.output_directory}/outputs/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration}.output "
                    cmd += f" 2> {options.output_directory}/errors/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration}.error " 
                    if os.path.exists(f"{options.temp_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration}/{sra}_{layout}.abridge") == False and os.path.exists(f"{options.output_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration}") == False: 
                        logging.info(f"Running command - {cmd}")
                        os.system(f"rm -rf {options.temp_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration}")
                        os.system(cmd)

                        cmd = f"mv {options.output_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_{level}_{sra}_{layout}_{iteration} {options.temp_directory}/abridge_compressed_files"
                        os.system(cmd)
                        
                
                #################################################################################################################
                # 2. compress_save_all_quality_scores_save_approx_quality_scores
                #################################################################################################################
                for level in [1,2,3]:
                    #if level == 1 or level == 2 : continue
                    cmd  = f"(/usr/bin/time --verbose abridge "
                    cmd += f" --compress "
                    cmd += f" --genome {options.genome} "
                    cmd += f" --inputsamfilenames {alignment_samfilename} "
                    cmd += f" --cpu {CPU} "
                    cmd += f" --output_directory {options.output_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_approx_quality_scores_level_{level}_{sra}_{layout}_{iteration} "
                    cmd += f" --keep_intermediate_error_files "
                    cmd += f" --save_all_quality_scores "
                    cmd += f" --level {level} "
                    cmd += ")"
