                        s = os.path.getsize(compressed_filename) >> 20 # Bytes to MB
                        m,t = getMemoryUsageAndDuration(errorfilename) 
                                
                        all_data_dict[f"{sra}_{layout}"][f"s_compress_genozip_optimize_{optimize}_compression_{compression}"] = s
                        all_data_dict[f"{sra}_{layout}"][f"m_compress_genozip_optimize_{optimize}_compression_{compression}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_compress_genozip_optimize_{optimize}_compression_{compression}"] = t
                        
                #################################################################################################################
                # CSAM
                #################################################################################################################
                
                for q in [0,1,2]:
                    for mode in [0,1,2]:
                        
                        compressed_filename = f"{options.temp_directory}/csam_compressed_files/compress_csam_q_{q}_m_{mode}_{sra}_{layout}_{iteration}.csam"
                        errorfilename = f"{options.output_directory}/errors/compress_csam_q_{q}_m_{mode}_{sra}_{layout}_{iteration}.error"
                        
                        s = os.path.getsize(compressed_filename) >> 20 # Bytes to MB
                        m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                        all_data_dict[f"{sra}_{layout}"][f"s_compress_csam_q_{q}_m_{mode}"] = s
                        all_data_dict[f"{sra}_{layout}"][f"m_compress_csam_q_{q}_m_{mode}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_compress_csam_q_{q}_m_{mode}"] = t
                        
                
                #################################################################################################################
                # Decompress
                #################################################################################################################
                
                #################################################################################################################
                # Abridge
                #################################################################################################################
                
                for type_of_compression in types_of_compression:
                    for level in [1,2,3]:
                        errorfilename =  f"{options.output_directory}/errors/decompress_{type_of_compression}_level_{level}_{sra}_{layout}_{iteration}.error"
                        m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                        all_data_dict[f"{sra}_{layout}"][f"m_decompress_abridge_{type_of_compression}_{levelToCompressor(level)}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_decompress_abridge_{type_of_compression}_{levelToCompressor(level)}"] = t
                        
                #################################################################################################################
                # Deez
                #################################################################################################################
                for lossy in [0,50,99]:
                    for encodequality in ["1","2"]:

                        errorfilename = f"{options.output_directory}/errors/decompress_deez_lossypercent_{lossy}_mode_{encodequality}_{sra}_{layout}_{iteration}.error"
                        m,t = getMemoryUsageAndDuration(errorfilename) 

                        all_data_dict[f"{sra}_{layout}"][f"m_decompress_deez_lossy_{lossy}_mode_{encodequality}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_decompress_deez_lossy_{lossy}_mode_{encodequality}"] = t

                #################################################################################################################
                # Samcomp
                #################################################################################################################
                errorfilename = f"{options.output_directory}/errors/decompress_samcomp_{sra}_{layout}_{iteration}.error"

                m,t = getMemoryUsageAndDuration(errorfilename) 
    
                all_data_dict[f"{sra}_{layout}"][f"m_decompress_samcomp"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_decompress_samcomp"] = t
                
                #################################################################################################################
                # Genozip
                #################################################################################################################
                
                for compression in ["best","fast"]:
                    for optimize in ["","optimize"]:
                        errorfilename = f"{options.output_directory}/errors/compress_genozip_optimize_{optimize}_compression_{compression}_{sra}_{layout}_{iteration}.error"
                        
                        m,t = getMemoryUsageAndDuration(errorfilename) 
                        all_data_dict[f"{sra}_{layout}"][f"m_decompress_genozip_optimize_{optimize}_compression_{compression}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_decompress_genozip_optimize_{optimize}_compression_{compression}"] = t
                
                #################################################################################################################
                # CSAM
                #################################################################################################################
                
                for q in [0,1,2]:
                    for mode in [0,1,2]:
                        
                        errorfilename = f"{options.output_directory}/errors/decompress_csam_q_{q}_m_{mode}_{sra}_{layout}_{iteration}.error"
                        
                        m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                        all_data_dict[f"{sra}_{layout}"][f"m_decompress_csam_q_{q}_m_{mode}"] = m
                        all_data_dict[f"{sra}_{layout}"][f"t_decompress_csam_q_{q}_m_{mode}"] = t
                
                #################################################################################################################
                # Random
                #################################################################################################################
                
                #################################################################################################################
                # Abridge
                #################################################################################################################
                errorfilename = f"{options.output_directory}/errors/abridge_random_save_all_quality_scores_save_exact_quality_scores_level_2_{sra}_{layout}_{iteration}.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_abridge_random_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_abridge_random_access"] = t
                
                #################################################################################################################
                # Deez
                #################################################################################################################
                errorfilename = f"{options.output_directory}/errors/random_deez_lossypercent_0_mode_1_{sra}_{layout}_{iteration}.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_deez_random_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_deez_random_access"] = t
                
                #################################################################################################################
                # Samcomp
                #################################################################################################################
                
                #################################################################################################################
                # Genozip
                #################################################################################################################
                
                
                errorfilename = f"{options.output_directory}/errors/random_genozip_optimize__compression_best_{sra}_{layout}_{iteration}.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                
                all_data_dict[f"{sra}_{layout}"][f"m_genozip_random_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_genozip_random_access"] = t
                        
                #################################################################################################################
                # CSAM
                #################################################################################################################
                
                errorfilename = f"{options.output_directory}/errors/random_csam_q_0_m_0_{sra}_{layout}_{iteration}.error"   
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_csam_random_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_csam_random_access"] = t
                
                #################################################################################################################
                # Index 
                #################################################################################################################
                
                # Abridge
                errorfilename = f"{options.temp_directory}/abridge_compressed_files/compress_save_all_quality_scores_save_exact_quality_scores_level_2_{sra}_{layout}_{iteration}/{sra}_{layout}.sam__index.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_abridge_index_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_abridge_index_access"] = t
                
                # BAM
                errorfilename = f"{options.output_directory}/errors/index_bam_{sra}_{layout}_{iteration}.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_bam_index_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_bam_index_access"] = t
                
                # CRAM
                errorfilename = f"{options.output_directory}/errors/index_cram_{sra}_{layout}_{iteration}.error"
                m,t = getMemoryUsageAndDuration(errorfilename) 
                        
                all_data_dict[f"{sra}_{layout}"][f"m_cram_index_access"] = m
                all_data_dict[f"{sra}_{layout}"][f"t_cram_index_access"] = t
                
    print(pd.DataFrame.from_dict(all_data_dict))
    pd.DataFrame.from_dict(all_data_dict).to_csv("/project/maizegdb/sagnik/ABRIDGE/Abridge_analysis_for_MS/all_info.csv")
                
if __name__ == "__main__":
    main()
    
    
    
    
    