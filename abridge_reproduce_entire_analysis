        if os.path.exists(f"{options.temp_directory}/sim_data_{iteration}_1.fastq")==False and os.path.exists(f"{options.temp_directory}/sim_data_{iteration}_2.fastq")==False:
            os.system(cmd)
            cmd = f"mv {options.output_directory}/raw_data/sim_data_{iteration}_1.fq {options.output_directory}/raw_data/sim_data_{iteration}_1.fastq"
            os.system(cmd)
            cmd = f"mv {options.output_directory}/raw_data/sim_data_{iteration}_2.fq {options.output_directory}/raw_data/sim_data_{iteration}_2.fastq"
            os.system(cmd)
            cmd = f"mv {options.output_directory}/raw_data/sim_data_{iteration}_*.fastq {options.temp_directory}/"
            os.system(cmd)
