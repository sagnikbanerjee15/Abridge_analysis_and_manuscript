                        cmd += f" 1> {options.output_directory}/outputs/decompress_genozip_optimize_{optimize}_compression_{compression}_{sra}_{layout}_{iteration}.output "
                        cmd += f" 2> {options.output_directory}/errors/decompress_genozip_optimize_{optimize}_compression_{compression}_{sra}_{layout}_{iteration}.error "
